{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block title %}{{ 'portal' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% block meta %}
    <base href="{{ path('claro_portal_index') }}">
    {{ parent() }}
{% endblock %}
{% block breadcrumb %}
    {{
    macros.breadcrumbs([
    {
        'icon': 'fa fa-home',
        'name': 'home'|trans({}, 'platform'),
        'href': path('claro_index')
    },
    {
        'name': 'portal'|trans({}, 'platform'),
        'href': ''
    }
    ])
    }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-main-core-portal.css') }}" />

{% endblock %}


{% block content %}
    <div
        class="page-container portal-container"
        data-portal="{{ resources | json_encode | raw | escape }}"
    >
    </div>
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}

    <script src="{{ hotAsset("dist/claroline-distribution-main-core-portal.js") }}"></script>
{% endblock %}
