{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block title %}{{ 'portal' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% block meta %}
    <base href="{{ path('claro_portal_index') }}">
    {{ parent() }}
{% endblock %}
{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-home',
                'name': 'home'|trans({}, 'platform'),
                'href': path('claro_index')
            },
            {
                'name': 'portal'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'portal'|trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-body">
        <div data-ng-view></div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets debug=false filter='less, cssmin' output='css/corebundle/portal.css'
    '@ClarolineCoreBundle/Resources/less/portal/portal.less'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" screen="media" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.types = {{ types|json_encode|raw }}
    </script>
    <script> load({{ chunks('claroline-distribution-main-core-portal')|raw }}) </script>
{% endblock %}
