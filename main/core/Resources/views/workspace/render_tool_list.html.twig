{% if not hideToolsMenu %}
    <div class="list-group menu" role="menubar">
        <div class="list-group-item disabled">{{ workspace.getName() }} <em>({{ workspace.getCode() }})</em></div>
        {% if hasManagerAccess %}
            <a class="list-group-item accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapse">
                <span class="fa fa-fw fa-eye"></span>
                {{ 'show_as'|trans({}, 'platform') }}
            </a>
            <div id="collapse" class="collapse">
                {% for role in workspace.getRoles() %}
                    {% if roleHasAccess[role.getId()] is defined %}
                        <a class="list-group-item {% if false == has_role_access_to_workspace(role.getName(), workspace.getId()) %} unclickable {% endif %}"
                           href="{{ path('claro_workspace_open', {'workspaceId': workspace.getId()}) }}?view_as={{ role.getName() }}">
                           {{ role.getTranslationKey()|trans({}, 'platform') }}
                       </a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        {% for orderedTool in orderedTools %}
            <a
                class="list-group-item{{ path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': orderedTool.getTool().getName()}) | compareRoute(" active") | raw }}"
                href="{{ path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': orderedTool.getTool().getName()}) }}"
                title="{{ orderedTool.getName()|trans({}, 'tools') }}" role="menuitem"
            >
                <span class="fa fa-fw fa-{{ orderedTool.getTool().getClass() }}"></span>
                <span>{{ orderedTool.getName()|trans({}, 'tools') }}</span>
            </a>
        {% endfor %}
    </div>
{% endif %}
