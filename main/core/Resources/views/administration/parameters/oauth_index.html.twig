{% extends "ClarolineCoreBundle:administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'claroline_oauth_apps' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}
{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_parameters_index')
            },
            {
                'name': 'parameters'|trans({}, 'platform'),
                'href': path('claro_admin_parameters_index')
            },
            {
                'name': 'claroline_oauth_apps'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block page_title %}
    {{ 'parameters'|trans({}, 'platform') }}
    <small>{{ 'claroline_oauth_apps'|trans({}, 'platform') }}</small>
{% endblock %}

{% block page_content %}
    <div class="list-group">
        <a href="{{ path('claro_admin_oauth_clients') }}" class="list-group-item"> {{ 'client_list'|trans({}, 'platform') }}</a>
        <a href="{{ path('claro_admin_oauth_claroline') }}" class="list-group-item">Claroline</a>
    </div>
{% endblock %}
