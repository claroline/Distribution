{% extends "ClarolineCoreBundle:administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'session' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}
{% block breadcrumb %}
    {{
    macros.breadcrumbs([
    {
    'icon': 'fa fa-cog',
    'name': 'administration'|trans({}, 'platform'),
    'href': path('claro_admin_index')
    },
    {
    'name': 'parameters'|trans({}, 'platform'),
    'href': path('claro_admin_index')
    },
    {
    'name': 'session'|trans({}, 'platform'),
    'href': ''
    }
    ])
    }}
{% endblock %}


{% block page_title %}
    {{ 'parameters'|trans({}, 'platform') }}
    <small>{{ 'session'|trans({}, 'platform') }}</small>
{% endblock %}

{% block page_content %}
    <form role="form" class="form-horizontal" action="{{path('claro_admin_session_submit')}}" method="post" enctype="multipart/form-data" id="form_settings" enctype='multipart/form-data'>
        <div class="panel panel-default">
            <div class="panel-body">
                {{ form_widget(form) }}
            </div>
        </div>

        <div class="form-toolbar">
            <button type="submit" class="btn btn-primary">
                <span class="action-icon fa fa-fw fa-save"></span>
                <span class="sr-only">{{ 'save'|trans({}, 'actions') }}</span>
            </button>
            <a href="{{ path('claro_admin_index') }}" class="btn btn-default">
                <span class="action-icon fa fa-fw fa-sign-out-alt"></span>
                <span class="sr-only">{{ 'exit'|trans({}, 'actions') }}</span>
            </a>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/administration/session.js') }}"></script>
{% endblock%}
