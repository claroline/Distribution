{% extends "ClarolineCoreBundle:administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'edit_security_token' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}
{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_parameters_index')
            },
            {
                'name': 'parameters'|trans({}, 'platform'),
                'href': path('claro_admin_parameters_index')
            },
            {
                'name': 'security_token'|trans({}, 'platform'),
                'href': path('claro_admin_security_token_list')
            },
            {
                'name': 'edit_security_token'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block page_title %}
    {{ 'parameters'|trans({}, 'platform') }}
    <small>{{ 'edit_security_token'|trans({}, 'platform') }}</small>
{% endblock %}

{% block page_content %}
    <form role="form"
        class="form-horizontal"
        action="{{ path('claro_admin_security_token_edit', {'tokenId': token.getId()}) }}"
        method="post"
        enctype="multipart/form-data"
        id="form_settings"
        novalidate
    >
        <div class="panel panel-default">
            <div class="panel-body">
                {{ form_widget(form) }}
                <span id="generate-token-btn" class="btn btn-default">
                <i class="fa fa-random"></i>
                    {{ 'generate_token'|trans({}, 'platform') }}
            </span>
            </div>
        </div>

        <div class="form-toolbar">
            <button type="submit" class="btn btn-primary">
                <span class="action-icon fa fa-fw fa-save"></span>
                <span class="sr-only">{{ 'save'|trans({}, 'actions') }}</span>
            </button>
            <a href="{{ path('claro_admin_security_token_list') }}" class="btn btn-default">
                <span class="action-icon fa fa-fw fa-sign-out-alt"></span>
                <span class="sr-only">{{ 'exit'|trans({}, 'actions') }}</span>
            </a>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
        src="{{ asset('bundles/clarolinecore/js/administration/securityTokenForm.js') }}"
        type="text/javascript"
    >
    </script>
{% endblock %}
