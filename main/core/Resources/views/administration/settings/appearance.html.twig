{% extends "ClarolineCoreBundle:administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'settings' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}
{% block breadcrumb %}
    {{
      macros.breadcrumbs([
      {
          'icon': 'fa fa-cog',
          'name': 'administration'|trans({}, 'platform'),
          'href': path('claro_admin_index')
      },
      {
          'name': 'appearance_settings'|trans({}, 'platform'),
          'href': '#'
      }])
    }}
{% endblock %}

{% block page_title %}
    {{ 'Appearance'|trans({}, 'platform') }}
    <small>{{ 'appearance'|trans({}, 'platform') }}</small>
{% endblock %}

{% block page_content %}
  <div class="appearance-settings-container"
    data-parameters="{{ parameters | json_encode | raw | escape }}"
    data-themes="{{ themes | json_encode | raw | escape }}"
    data-is-read-only = "{{ isReadOnly | json_encode | raw | escape }}"
  />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ hotAsset('dist/claroline-distribution-main-core-appearance-settings.js') }}"></script>
{% endblock %}
