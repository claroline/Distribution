{% if isDesktop() %}
    {# Resource is displayed in Desktop #}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% else %}
    {# Resource is displayed in Workspace #}
    {% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}
{% endif %}

{% extends layout %}

{% block content %}
      {% if requiresUnlock(_resource.resourceNode) %}
          {% render(controller('ClarolineCoreBundle:Resource:unlockCodeForm', {'node': _resource.resourceNode.getId()})) %}
      {% else %}
          {% block resource_content %}

          {% endblock %}
      {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# Translations #}
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'resource' }) }}"></script>
{% endblock %}
