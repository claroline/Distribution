{% extends 'ClarolineCoreBundle::form_theme.html.twig' %}

{% block twolevelselect_widget %}
    {% spaceless %}
        <div class="two_level_select{% if errors|length > 0 %} has-error{% endif %}">
            {{ block('hidden_widget') }}
        </div>
        <script type="text/javascript">
            window.choices = {{ form.vars['choices']|json_encode()|raw }}
            window.data = "{{ form.vars['data'] }}"
            window.formId = "{{ form.vars['id'] }}"
        </script>
        <script> load({{ chunks('claroline-distribution-main-core-form-two-level-select')|raw }}) </script>
    {% endspaceless %}
{% endblock %}
