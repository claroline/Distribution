{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'LTI' | trans({}, 'lti') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
    macros.breadcrumbs([
    {
        'icon': 'fa fa-cog',
        'name': 'administration'|trans({}, 'platform'),
        'href': path('claro_admin_parameters_index')
    },
    {
        'name': 'parameters'|trans({}, 'platform'),
        'href': path('claro_admin_parameters_index')
    },
    {
        'name': 'LTI'|trans({}, 'lti'),
        'href': ''
    }
    ])
    }}
{% endblock %}

{% block section_content %}
        <div id="add_app">
            <form class="form-horizontal" action="{{ path('ujm_lti_edit_form_app', {'appId': appId}) }}" method="post" {{ form_enctype(form) }} id="form_edit_app">
                {{ form_errors(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary" id="sub_add_app">{{ 'ok'|trans({}, 'platform') }}</button>
            </form>
        </div>
    </div>
{% endblock %}