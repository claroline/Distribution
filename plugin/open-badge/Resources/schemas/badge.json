{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The badge id"
    },
    "description": {
      "type": "string",
      "description": "The badge description"
    },
    "criteria": {
      "type": "string",
      "description": "The badge criteria"
    },
    "image": {
      "type": "object",
      "$ref": "https://github.com/claroline/Distribution/tree/master/main/core/Resources/schemas/publicFile.json"
    },
    "issuer": {
      "type": "object",
      "$ref": "https://github.com/claroline/Distribution/tree/master/main/core/Resources/schemas/organization.json"
    },
    "duration": {
      "type": "number",
      "description": "The number of days the badge is valid"
    },
    "tags": {
      "type": "string",
      "description": "A tag list (coma separated)"
    }
  },
  "required": ["description", "criteria", "image", "issuer"],
  "claroline": {
    "requiredAtCreation": [],
    "ids": ["id"]
  }
}
