{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% trans_default_domain 'competency' %}

{% block title %}
    {{ parent() ~ ' - ' ~ 'my-learning-objectives'|trans({}, 'tools')|striptags|raw }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.desktopBreadcrumbs([
            {
                'name': 'my-learning-objectives'|trans({}, 'tools'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-body my-objectives-tool-panel-body">
        <div class="page-container my-objectives-tool-container"
             data-objectives="{{ objectives| json_serialize | raw | escape }}"
             data-objectives-competencies="{{ objectivesCompetencies | json_serialize | raw | escape }}"
             data-competencies="{{ competencies | json_serialize | raw | escape }}"
        >
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ hotAsset('dist/claroline-distribution-plugin-competency-my-objectives.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-competency-my-objectives.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-competency-circle.css') }}" />
{% endblock %}
