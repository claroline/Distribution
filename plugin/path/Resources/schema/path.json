{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The uuid of the path"
    },
    "display": {
      "type": "object",
      "properties": {
        "description": {
          "type": ["string", "null"],
          "description": "The description of the path"
        },
        "showOverview": {
          "type": "boolean",
          "description": "Wether the overview is displayed or not"
        },
        "showSummary": {
          "type": "boolean",
          "description": "Wether the summary is displayed or not"
        },
        "openSummary": {
          "type": "boolean",
          "description": "Wether the summary is opened by default or not"
        },
        "numbering": {
          "type": "string",
          "description": "Numbering"
        }
      },
      "required": ["showOverview", "showSummary", "openSummary"]
    },
    "steps": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "https://github.com/claroline/Distribution/tree/master/plugin/path/Resources/schema/step.json"
      }
    }
  },
  "claroIds": ["id"],
  "required": ["display", "steps"]
}
