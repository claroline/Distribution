{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The uuid of the step"
    },
    "title": {
      "type": "string",
      "description": "The title of the step"
    },
    "description": {
      "type": ["string", "null"],
      "description": "The description of the step"
    },
    "children": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "https://github.com/claroline/Distribution/tree/path-refactoring/plugin/path/Resources/schema/step.json"
      }
    }
  },
  "claroIds": ["id"],
  "required": ["title"]
}
