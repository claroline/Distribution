{% extends "ClarolineCoreBundle:administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'packages' | trans({}, 'platform') | striptags | raw }}
    {{ ' - ' ~ 'inwicastclarolineplugin' | trans({}, 'plugin_description') | striptags | raw }}{% endblock %}
{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}
{% block breadcrumb %}
    {{ macros.breadcrumbs([
    {
    'icon': 'icon-cog',
    'name': 'administration'|trans({}, 'platform'),
    'href': path('claro_admin_index')
    },
    {
    'name': 'inwicastclarolineplugin'|trans({}, 'plugin_description'),
    'href': ''
    }
    ]) }}
{% endblock %}

{% block page_title %}{{ 'inwicastclarolineplugin'|trans({}, 'plugin_description') }}{% endblock %}
{% block page_content %}
    <form action="{{ path('inwicast_mediacenter_configure') }}" method="POST">
        <div class="panel panel-default">
            <div class="panel-body">
                {{ form_errors(form) }}
                <div class="row">
                    <label for="link" class="control-label col-md-3 required">
                        {{ 'inwicast_mediacenter_url'|trans({}, 'widget') }}:
                    </label>

                    <div class="col-md-9">
                        {{ form_widget(form.url) }}
                    </div>
                </div>
                <div class="row inwicast-db-params">
                    <h4 class="col-md-12">{{ 'database_parameters'|trans({}, 'widget') }}</h4>
                </div>
                <div class="row">
                    <label for="link" class="control-label col-md-3 required">
                        {{ 'inwicast_mediacenter_driver'|trans({}, 'widget') }}:
                    </label>

                    <div class="col-md-9">
                        {{ form_widget(form.driver) }}
                    </div>
                </div>
                <div class="row">
                    <label for="link" class="control-label col-md-3 required">
                        {{ 'inwicast_mediacenter_host'|trans({}, 'widget') }}:
                    </label>

                    <div class="col-md-9">
                        {{ form_widget(form.host) }}
                    </div>
                </div>
                <div class="row">
                    <label for="link" class="control-label col-md-3 required">
                        {{ 'inwicast_mediacenter_port'|trans({}, 'widget') }}:
                    </label>

                    <div class="col-md-9">
                        {{ form_widget(form.port) }}
                    </div>
                </div>
                <div class="row">
                    <label for="link" class="control-label col-md-3 required">
                        {{ 'inwicast_mediacenter_dbname'|trans({}, 'widget') }}:
                    </label>

                    <div class="col-md-9">
                        {{ form_widget(form.dbname) }}
                    </div>
                </div>
                <div class="row">
                    <label for="link" class="control-label col-md-3 required">
                        {{ 'inwicast_mediacenter_user'|trans({}, 'widget') }}:
                    </label>

                    <div class="col-md-9">
                        {{ form_widget(form.user) }}
                    </div>
                </div>
                <div class="row">
                    <label for="link" class="control-label col-md-3 required">
                        {{ 'inwicast_mediacenter_password'|trans({}, 'widget') }}:
                    </label>

                    <div class="col-md-9">
                        {{ form_widget(form.password) }}
                    </div>
                </div>
                {{ form_rest(form) }}
            </div>
        </div>

        <div class="form-toolbar">
            <button type="submit" class="btn btn-primary">
                <span class="action-icon fa fa-fw fa-save"></span>
                <span class="sr-only">{{ 'save'|trans({}, 'actions') }}</span>
            </button>
            <a href="{{ path('claro_admin_index') }}" class="btn btn-default">
                <span class="action-icon fa fa-fw fa-sign-out-alt"></span>
                <span class="sr-only">{{ 'exit'|trans({}, 'actions') }}</span>
            </a>
        </div>
    </form>
{% endblock %}
