{% extends "IcapBadgeBundle::layout.html.twig" %}

{% trans_default_domain "icap_badge" %}

{% block title %}{{ 'badges' | trans ~ ' - ' ~ 'claim_badge_form' | trans | striptags | raw }}{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">{{ 'claim_badge_form'|trans }}</h1>
        </div>

        <div class="panel-body">
            <form role="form" action="{{ path('icap_badge_claim_badge') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">{{ 'claim'|trans }}</button>
                <a href="{{ path('icap_badge_profile_view_badges') }}" title="{{ 'cancel'|trans({}, 'platform') }}" class="btn btn-danger" role="button">{{ 'cancel'|trans({}, 'platform') }}</a>
            </div>
        </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script> load({{ chunks('claroline-distribution-plugin-badge-form-claim')|raw }}) </script>
{% endblock %}
