{% extends "ClarolineCoreBundle:resource:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-scorm-resource.css') }}" />
{% endblock %}

{% block content %}
    <div
        class="page-container scorm-container"
        data-resource-node="{{ _resource.resourceNode | api_serialize | json_encode | raw | escape }}"
        data-scorm="{{ _resource | api_serialize | json_encode | raw | escape }}"
        data-evaluation="{{ userEvaluation | api_serialize | json_encode | raw | escape }}"
        data-trackings="{{ trackings | json_encode | raw | escape }}"
    >
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ hotAsset('dist/claroline-distribution-plugin-scorm-resource.js') }}"></script>
{% endblock %}
