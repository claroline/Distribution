{% macro renderMenu(scos) %}
    <ul>
    {% for sco in scos %}

        {% if sco.getIsBlock() %}
            {% set scoChildren = sco.getScoChildren() %}
            <li><b>{{ sco.getTitle() }}</b></li>

            {% if scoChildren is not null %}
                {{ _self.renderMenu(scoChildren) }}
            {% endif %}

        {% else %}
            <li sco-id="{{sco.getId()}}">
                <a href="{{ path('claro_render_scorm_2004_sco', {'scoId': sco.getId()}) }}"
                   class="sco-menu-link">
                    {{ sco.getTitle() }}
                </a>
            </li>
        {% endif %}
    {% endfor %}
    </ul>
{% endmacro %}

{% from _self import renderMenu %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% else %}
    {% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}
{% endif %}

{% extends layout %}

{% block javascripts %}
    <script>
        window.trackingDetails = {{ scoTrackingDetails|raw }};
    </script>
    {{ parent() }}
    <script> load({{ chunks('claroline-distribution-plugin-scorm-scorm-2004-api')|raw }}) </script>
    <script> load({{ chunks('claroline-distribution-plugin-scorm-scorm-2004-menu-sco')|raw }}) </script>
{% endblock %}

{% block section_panel %}
    <div class="page-header">
        <h1>{{ currentSco.getTitle() }}</h1>

        <div class="page-actions">
            {% if canEdit %}
                <button id="configuration-btn"
                        class="btn btn-default btn-sm"
                        data-resource-id="{{ resource.getId() }}"
                        data-toggle="tooltip"
                        data-placement="bottom"
                        title="{{ 'configure'|trans({}, 'platform') }}"
                >
                    <i class="fa fa-cog"></i>
                </button>
            {% endif %}
            <button id="menu-display-btn"
                    class="btn btn-default btn-sm"
                    data-toggle="tooltip"
                    data-placement="bottom"
                    title="{{ 'display_menu'|trans({}, 'scorm') }}"
            >
                <i class="fa fa-list"></i>
            </button>
            <a class="btn btn-primary btn-sm"
               data-toggle="tooltip"
               data-placement="bottom"
               title="{{ 'full_screen'|trans({}, 'scorm') }}"
               onClick="javascript:enterFullScreen()">
                <i class="fa fa-expand"></i>
            </a>
            {% if canEdit %}
                <a class="btn btn-default btn-sm"
                   href="{{ path('claro_scorm_results', {'resourceNode': resource.getResourceNode().getId()}) }}"
                   data-toggle="tooltip"
                   data-placement="bottom"
                   title="{{ 'display_results'|trans({}, 'scorm') }}"
                >
                    <i class="fa fa-check"></i>
                </a>
            {% endif %}
            <a class="btn btn-default btn-sm"
               {% if resource.getExitMode() == constant('Claroline\\ScormBundle\\Entity\\ScormResource::WORKSPACE_OPEN') %}
                   href="{{ path('claro_workspace_open', {'workspaceId': workspace.getId()}) }}"
               {% elseif resource.getExitMode() == constant('Claroline\\ScormBundle\\Entity\\ScormResource::DESKTOP_OPEN') %}
                   href="{{ path('claro_desktop_open') }}"
               {% endif %}
               data-toggle="tooltip"
               data-placement="bottom"
               title="{{ 'quit'|trans({}, 'resource') }}"
            >
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div>
        <div class="row">
            <div id="menu-box" class="col-md-3 menu-style hidden">
                <div id="scorm-menu">
                    {{ renderMenu(scos) }}
                    <br>
                    <div class="center-text">
                        <a href="{{ path('claro_render_scorm_2004_resource', {'scormId': resource.getId(), 'mode': 1}) }}"
                           class="btn btn-default">
                            {{ 'quit'|trans({}, 'resource') }}
                        </a>
                    </div>
                    <br>
                </div>
            </div>
            <div id="content-box" class="col-md-12">
                <div class="full-size">
                    <div id="twig-scorm-data"
                         data-sco-id="{{scoTracking.getSco().getId()}}">
                    </div>
                    <iframe id="scorm-frame"
                            allowfullscreen
                            class="full-size"
                            src="{{ asset(scormUrl) }}"
                            frameborder="0"
                    >
                    </iframe>
                </div>
            </div>
        </div>
    </div>
    <style>
        .menu-style {
            height: 100%;
            overflow-x: auto;
            overflow-y: hidden;
            white-space: nowrap;
            border-right: 10px solid #DEDCDA;
            margin-left: 0px;
            padding-left: 0px;
        }
        .full-size {
            height: 100%;
            width: 100%;
        }
    </style>
{% endblock %}
