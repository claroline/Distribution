<div class="modal-dialog"
     role="dialog"
     aria-labelledby="modalLabel"
     aria-hidden="true"
     id="modifier-modal">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h3 class="modal-title">
                {{"modifier_une_periode"|trans({},"presences")}}
            </h3>
        </div>
        <div class="modal-body">

            <form id="ModifHoraireForm"
                  method="post" {{ form_enctype(ModifSchoolYearForm) }}
                  action="{{path("formalibre_school_year_modif",{"theSchoolYear":theSchoolYear.getId()})}}">
                Nom:
                {{form_widget(ModifSchoolYearForm.nameModifSchoolYear)}}
                {{"date_debut"|trans({},"presences")}}:
                {{form_widget(ModifSchoolYearForm.beginDateModifSchoolYear)}}
                {{"date_fin"|trans({},"presences")}}:
                {{form_widget(ModifSchoolYearForm.endDateModifSchoolYear)}}
                {{"heure_ouverture"|trans({},"presences")}}:
                {{form_widget(ModifSchoolYearForm.beginHourModifSchoolYear)}}
                {{"heure_fermeture"|trans({},"presences")}}:
                {{form_widget(ModifSchoolYearForm.endHourModifSchoolYear)}}
                {{"actual_periode"|trans({},"presences")}}:
                {{form_widget(ModifSchoolYearForm.actualModifSchoolYear)}}
                </br> </br>


                <div class="row">
                    <div class="row">
                        <button class="btn btn-primary col-md-4 col-md-offset-1"
                                type="submit"
                                name="form[validerModifSchoolYear]">{{"modifier"|trans({},"presences")}}:
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{% block javascripts %}
     <script>
        window.nameModifSchoolYear = "{{ theSchoolYear.getSchoolYearName() }}"
        window.beginDateModifSchoolYear = "{{ theSchoolYear.getSchoolYearBegin()|date('d-m-Y') }}"
        window.endDateModifSchoolYear = "{{ theSchoolYear.getSchoolYearEnd()|date('d-m-Y') }}"
        window.beginHourModifSchoolYear = "{{ theSchoolYear.getSchoolDayBeginHour()|date('H:i') }}"
        window.endHourModifSchoolYear = "{{ theSchoolYear.getSchoolDayEndHour()|date('H:i') }}"
        window.current = {% if theSchoolYear.getSchoolYearActual()%}true{%else%}false{%endif%};
    </script>
    <script> load({{ chunks('claroline-distribution-plugin-presence-admin-school-year-modif')|raw }}) </script>
{% endblock %}
