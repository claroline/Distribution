<div class="modal-dialog"
     role="dialog"
     aria-labelledby="modalLabel"
     aria-hidden="true">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h3 class="modal-title" style="text-align: center;">
                {{"modifier_statut"|trans({},"presences")}} : {{theStatus.getStatusName()}}
            </h3>
        </div>
        <div class="modal-body">
            <form method="post" {{ form_enctype(ModifStatusForm) }} action="{{path("formalibre_status_modif",{"theStatus":theStatus.getId()})}}">

                {{"choix_nom"|trans({},"presences")}} :
                {{form_widget(ModifStatusForm.name2)}}

                {{"choix_couleur"|trans({},"presences")}} :
                {{form_widget(ModifStatusForm.color2)}}

                {{"mise_evidence"|trans({},"presences")}} :
                {{form_widget(ModifStatusForm.principalStatus2)}}

                </br></br>
                {{form_widget(ModifStatusForm.valider2)}}

            </form>
        </div>
    </div>
</div>
{% block javascripts %}
    <script>
        window.statusName = "{{theStatus.getStatusName()}}"
        window.color = "{{theStatus.getStatusColor()}}"
        window.byDefault = {% if theStatus.getStatusByDefault()%}true{%else%}false{%endif%};
    </script>
    <script> load({{ chunks('claroline-distribution-plugin-presence-admin-status-modif')|raw }}) </script>
{% endblock %}
