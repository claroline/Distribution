{% extends 'ClarolineCoreBundle:Log:view_details.html.twig' %}

{% block logDetailsContext %}
    {{ parent() }}
    {% if constant('Claroline\\ResultBundle\\Event\\Log\\LogResultsNewMarkEvent::ACTION') == log.action %}
        {% include 'ClarolineResultBundle:Log:log_details_mark_added.html.twig' %}
    {% elseif constant('Claroline\\ResultBundle\\Event\\Log\\LogResultsDeleteMarkEvent::ACTION') == log.action %}
        {% include 'ClarolineResultBundle:Log:log_details_mark_deleted.html.twig' %}
    {% endif %}
{% endblock %}