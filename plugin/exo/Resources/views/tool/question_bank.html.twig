{% extends "ClarolineCoreBundle:desktop:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-exo-question-bank-tool.css') }}" />
{% endblock %}

{# Title of the Page #}
{% block title %}{{ 'ujm_questions' | trans({}, 'tools') }}{% endblock %}

{# Content of the Page #}
{% block content %}
    <div
        class="page-container question-bank-container"
        data-current-context="{{ context | json_encode | raw | escape }}"
    ></div>
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}

    {# Translations #}
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'quiz' }) }}"></script>
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'question_types' }) }}"></script>

    <script src="{{ hotAsset('claroline-distribution-plugin-exo-bank') }}"></script>
{% endblock %}
