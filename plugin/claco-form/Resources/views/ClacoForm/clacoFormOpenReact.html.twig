{% extends "ClarolineCoreBundle:Resource:layout.html.twig" %}

{% block content %}
    <div
      class="page-container claco-form-container"
      data-resource-id="{{ clacoForm.getId() }}"
      {#data.resource-details = "{{ clacoForm.getDetails() | json_encode | raw | escape }}"#}
      {#data-resource="{{ _resource | json_encode | raw | escape }}"#}
      {#data-resource-node="{{ _resource.resourceNode | api_serialize | json_encode | raw | escape }}"#}
        {#window.resourceNodeId = {{ clacoForm.getResourceNode().getId() }}#}
        {#window.resourceNodeName = "{{ clacoForm.getResourceNode().getName() }}"#}
        {#data.workspaceId = "{{ clacoForm.getResourceNode().getWorkspace().getId() }}"#}
        {#data-isAnon = "{{ isAnon ? 'true' : 'false' }}"#}
        {#data-isCategoryManager = "{{ isCategoryManager ? 'true' : 'false' }}"#}
        {#window.userId = {{ userId }}#}
        {#window.canEdit = {{ canEdit ? 'true' : 'false' }}#}
        {#window.fields = {{ fields|raw }}#}
        {#window.keywords = {{ keywords|raw }}#}
        {#window.categories = {{ categories|raw }}#}
        {#window.myEntries = {{ myEntries|raw }}#}
        {#window.managerEntries = {{ managerEntries|raw }}#}
        {#window.template = `{{ clacoForm.getTemplate()|raw }}`#}
        {#window.nbEntries = {{ nbEntries }}#}
        {#window.nbPublishedEntries = {{ nbPublishedEntries }}#}
        {#window.canGeneratePdf = {{ canGeneratePdf ? 'true' : 'false' }}#}
        {#window.sharedEntries = {{ sharedEntries|json_encode|raw }}#}
        {#window.cascadeLevelMax = {{ cascadeLevelMax }}#}
      {% if not isAnon %}
        data-user="{{ user | api_serialize({'public': true}) | json_encode | raw | escape }}"
      {% endif %}
      data-resource="{{ _resource | json_serialize('api_user_min') | raw | escape }}"
      data-resource-node="{{ _resource.resourceNode | api_serialize | json_encode | raw | escape }}"
      {#data-server-url="{{ serverUrl | json_encode | raw | escape }}"#}
      {#data-security-salt="{{ securitySalt | json_encode | raw | escape }}"#}
    >
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-claco-form-clacoform.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ hotAsset('dist/claroline-distribution-plugin-claco-form-resource-react.js') }}"></script>
{% endblock %}

