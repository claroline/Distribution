{% extends "ClarolineCoreBundle:Resource:layout.html.twig" %}

{% block content %}
    <div
      class="page-container claco-form-container"
      {% if not isAnon %}
        data-user="{{ user | api_serialize  | json_encode | raw | escape }}"
      {% endif %}
      data-resource="{{ _resource | api_serialize | json_encode | raw | escape }}"
      data-resource-node="{{ _resource.resourceNode | api_serialize | json_encode | raw | escape }}"
      data-fields="{{ fields | json_serialize('api_facet_admin') | raw | escape }}"
      data-cascade-level-max={{ cascadeLevelMax }}
      data-can-generate-pdf="{{ canGeneratePdf }}"
      data-entries="{{ entries | json_encode | raw | escape }}"
      data-my-entries-count={{ myEntriesCount }}
    >
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-claco-form-claco-form-resource.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ hotAsset('dist/claroline-distribution-plugin-claco-form-claco-form-resource.js') }}"></script>
{% endblock %}
