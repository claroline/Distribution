{% if dropzone.peerReview %}
    <div class="panel-group" id="peerReview-helper-accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#show-peerReview-help"
                   href="#show-peerReview-help">
                    <h4 class="panel-title">
                        <span class="fa fa-angle-down"></span>
                        <span class="fa fa-angle-right" style="display: none;"></span>
                        {{ "Help on peerReview mode"|trans({}, 'innova_collecticiel') }}
                    </h4>
                </a>
            </div>
            <div id="show-peerReview-help" class="panel-collapse collapse">
                <div class="panel-body">
                    <p> {{ "PeerReview_helper_ideal_case"|trans({},'innova_collecticiel')|raw }} </p>

                    <p> {{ "PeerReview_helper_ideal_case_example"|trans({},'innova_collecticiel') }}</p>

                    <p> {{ "PeerReview_helper_other_cases"|trans({},'innova_collecticiel')|raw }}</p>

                    <p> {{ "PeerReview_helper_unlock_tool"|trans({},'innova_collecticiel')|raw }}</p> </p>
                </div>
            </div>
        </div>
        <style>
            .panel-default > .panel-heading {
                background-color: #fff;
            }
        </style>
        <script> load({{ chunks('claroline-distribution-plugin-collecticiel-drop-peer-review-helper')|raw }}) </script>
    </div>
{% endif %}
