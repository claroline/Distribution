<div class="row media-container">
    <!-- play button -->
    <div class="col-md-1">
        <button type="button" class="btn btn-default fa fa-play" id="play" onclick="play()" title="{{'play_pause' | trans({}, 'media_resource')}}"></button>
    </div>
    <!-- play progress -->
    <div class="col-md-11">
        <div class="progress" style="margin-bottom:0px;height:26px;">
            <div id="seekbar" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>
<!-- regions hidden -->
<div class="row" style="display:none;">
    <div class="col-md-12 text-center regions-container">
        {% if regions | length > 0 %}
            {% for region in regions %}
                {% include "InnovaMediaResourceBundle:MediaResource/Partials:region.html.twig" with {'region': region, 'hidden': true, 'config':false, 'admin': false} %}                
            {% endfor %}
        {% endif %}
    </div>
</div>

{% block javascripts %}

    {% javascripts output='vendor/claroline/plugin/innovamediaresource/js/player-pause.js'
    '@InnovaMediaResourceBundle/Resources/js/play-pause.js'
 %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
