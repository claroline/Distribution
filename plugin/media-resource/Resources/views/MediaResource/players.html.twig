{% extends "InnovaMediaResourceBundle::layout.html.twig" %}

{% block media_resource_content %}
    <div class="media-resource-players-container" id="media-module" data-ng-cloak="">
        <mr-players-wrapper class="players-wrapper" data-resource="{{_resource | json_encode}}"></mr-players-wrapper>
    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script>
        load({{ chunks('claroline-distribution-plugin-media-resource-players')|raw }}, function() {
            angular.bootstrap('#media-module', ['PlayersApp']);
        })
    </script>
{% endblock %}
